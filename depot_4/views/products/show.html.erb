<p id="notice"><%= notice %></p>
<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Content:</b>
  <%= @product.content %>
</p>

<p>
  <b>Price</b>
  <%= @product.price %>
</p>

<!--show the former comments -->
<h2>Comments</h2>
<% @product.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
    
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<!-- add the comment UI in the show of product 
     we use the @product.comments.build to build the objects for a certain product
-->

<h2>Add a comment</h2>
<%= form_for([@product, @product.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  <div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
 
<% end %>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
