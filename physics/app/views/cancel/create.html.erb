<% if @count ==  0 %>
  <p style="font-size:20px">您尚未预约任何实验！</p>
<% else %>
  <p style="font-size:16px">请选择您要取消的实验预约:</p>
  <%=form_tag do %>
    <table widtd="200px" border="1px" bordercolor="#000080">
      <tbody>
	<tr>
	  <td width="62px" align="center"><font color="#000080">实验</font></td>
	  <td width="62px" align="center"><font color="#000080">时间</font></td>
	  <td width="20px" align="center"><font color="#000080">选择</font></td>
	</tr>
      
	<% for i in 1..@books.length %>
	  <tr>
	    <td width="62px" align="center"><font color="#000080">实验<%=@books[i-1].experiment_id %></font></td>
	    <td width="62px" align="center"><font color="#000080"><%=@books[i-1].day %></font></td>
	    
	    <td width="20px" align="center">
	    <%=check_box_tag "cancellations[]", (@books[i-1].experiment_id.to_s + "|" +@books[i-1].day)%>
	    </td> 
	  </tr>

	<% end %>
      </tbody>
    </table>
    <%=submit_tag "提交", html_options = {:style => "margin:10px auto; font-size:15px"} %>
  <% end %>
<% end %>
